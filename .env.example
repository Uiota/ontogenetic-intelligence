# Social Media API Credentials for OGI Framework
# Copy this file to .env and fill in your actual credentials

# Medium API Credentials
# Get your integration token from: https://medium.com/me/settings
# Under "Integration tokens", create a new token
MEDIUM_INTEGRATION_TOKEN=your_medium_integration_token_here

# LinkedIn API Credentials
# Set up at: https://www.linkedin.com/developers/
# Create an app and get OAuth 2.0 access token
LINKEDIN_ACCESS_TOKEN=your_linkedin_access_token_here

# Optional: Publishing Settings
MEDIUM_DEFAULT_STATUS=draft  # draft, public, or unlisted
LINKEDIN_DEFAULT_VISIBILITY=PUBLIC  # PUBLIC or CONNECTIONS

# Optional: Content Customization
AUTHOR_NAME=Michael Gibson
AUTHOR_LINKEDIN=https://www.linkedin.com/in/michael-gibson-216641244/
AUTHOR_MEDIUM=https://medium.com/@uniqstic
RESEARCH_GROUP=Uniqstic Research Group
RESEARCH_WEBSITE=https://uiota.space